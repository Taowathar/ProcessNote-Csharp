<Window x:Class="ProcessNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessNote"
        
        
        mc:Ignorable="d"
        Title="Process Note" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Processes">
                <local:Processes x:Name="ctrProcesses"/>
            </TabItem>
        </TabControl>

        <CheckBox Content="Always on top" HorizontalAlignment="Left" VerticalAlignment="Bottom" Checked="HandleCheck" Unchecked="HandleUnchecked" />

    </Grid>
</Window>
